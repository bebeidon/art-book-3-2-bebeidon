<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>
   
   <view name="basic">
      <text name="system-name" extra="true">
	  <visible>false</visible>
      </text>
   </view>

   <view name="detailed,video,grid">
      <image name="logo">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <text name="logoText">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </text>
      <text name="system-name" extra="true">
         <pos>0.15 0.03</pos>
         <size>0.7 0.03125</size>
         <text>${system.fullName}</text>
         <alignment>center</alignment>
         <fontSize>0.028125</fontSize>
         <fontPath>${bodyFont}</fontPath>
         <forceUppercase>true</forceUppercase>
		 <color>FFFFFF99</color>
      </text>
   </view>

   <view name="detailed,video">
      <textlist name="gamelist">
         <pos>0.02 0.12</pos>
         <size>0.5 0.9</size>
      </textlist>
   </view>

   <view name="grid">
      <imagegrid name="gamegrid">
		 <pos>0.01 0.15</pos>
         <autoLayout>3 2</autoLayout>
         <centerSelection>false</centerSelection>
         <scrollDirection>vertical</scrollDirection>
      </imagegrid>
      <video name="md_video">
         <visible>true</visible>
         <snapshotSource>image</snapshotSource>
      </video>
      <text name="gridtile">
         <visible>false</visible>
      </text>
   </view>

</theme>