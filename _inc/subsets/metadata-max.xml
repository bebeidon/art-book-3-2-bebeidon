<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

   <include>./metadata-on.xml</include>
   <include>./metadata-min.xml</include>

   <view name="detailed,video,grid">

      <!-- Genre & Name -->
      <text name="md_genre">
         <visible>true</visible>
         <pos>0.05 0.17</pos>
         <size>0.345833333333333 0.025</size>
         <fontSize>0.028125</fontSize>
		 <color>ffffff99</color>
      </text>
      <textlist name="gamelist">
         <pos>0.05 0.2</pos>
         <size>0.9 0.09</size>
         <horizontalMargin>0</horizontalMargin>
         <fontSize>0.0375</fontSize>
		 <selectorColor>00000000</selectorColor>
      </textlist>
	  <image name="md_marquee">
         <visible>false</visible>
      </image>
      <!-- Rating & Release Date -->
      <rating name="md_rating">
         <pos>0.05 0.275</pos>
         <size>0 0.04375</size>
         <backgroundColor>FF0000</backgroundColor>
      </rating>
      <datetime name="md_releasedate">
         <pos>0.21 0.275</pos>
         <size>0.1666666666666667 0.05</size>
         <fontSize>0.028125</fontSize>
		 <color>ffffffcc</color>
      </datetime>

      <!-- Last Played -->
      <text name="md_lbl_lastplayed">
         <visible>true</visible>
         <pos>0.05 0.39</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
         <forceUppercase>true</forceUppercase>
         <text>Last Played:</text>
		 <color>ffffff99</color>
      </text>
      <datetime name="md_lastplayed">
         <visible>true</visible>
         <pos>0.21 0.39</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
         <forceUppercase>true</forceUppercase>
		 <color>ffffffcc</color>
      </datetime>

      <!-- Playcount -->
      <text name="md_lbl_playcount">
         <visible>true</visible>
         <pos>0.05 0.445</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
         <forceUppercase>true</forceUppercase>
         <text># of plays:</text>
		 <color>ffffff99</color>
      </text>
      <text name="md_playcount">
         <visible>true</visible>
         <pos>0.21 0.445</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
		 <color>ffffffcc</color>
      </text>

      <!-- Gametime -->
      <text name="md_lbl_gametime">
         <visible>true</visible>
         <pos>0.05 0.5</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
         <forceUppercase>true</forceUppercase>
         <text>Time Played:</text>
		 <color>ffffff99</color>
      </text>
      <text name="md_gametime">
         <visible>true</visible>
         <pos>0.21 0.5</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
         <forceUppercase>true</forceUppercase>
		 <color>ffffffcc</color>
      </text>

      <!-- Developer -->
      <text name="md_lbl_developer">
         <visible>true</visible>
         <pos>0.05 0.605</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
         <forceUppercase>true</forceUppercase>
         <text>Developer:</text>
		 <color>ffffff99</color>
      </text>
      <text name="md_developer">
         <visible>true</visible>
         <pos>0.21 0.605</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
		 <color>ffffffcc</color>
      </text>

      <!-- Publisher -->
      <text name="md_lbl_publisher">
         <visible>true</visible>
         <pos>0.05 0.66</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
         <forceUppercase>true</forceUppercase>
         <text>Publisher:</text>
		 <color>ffffff99</color>
      </text>
      <text name="md_publisher">
         <visible>true</visible>
         <pos>0.21 0.66</pos>
         <size>0.2 0.028125</size>
         <fontSize>0.028125</fontSize>
		 <color>ffffffcc</color>
      </text>

      <!-- Description -->
      <text name="md_description">
         <visible>true</visible>
         <pos>0.05 .77</pos>
         <size>0.36 0.155</size>
         <fontSize>0.03</fontSize>
		 <color>ffffffcc</color>
      </text>
   </view>

   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.7 0.6</pos>
         <maxSize>0.4791666666666667 0.71875</maxSize>
      </image>
   </view>

   <view name="video,grid">
   
   	  <image name="background-art" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./_inc/systems/${system.theme}-art-fs.jpg</path>
         <tile>false</tile>
         <color>ffffffcc</color>
		 <zIndex>2</zIndex>
      </image>
	  <image name="md_gamelist_background" extra="true">
         <path>./_inc/images/space.png</path>
         <origin>0 0</origin>
         <pos>0 0</pos>
		 <size>1 1</size>
		 <color>00000088</color>
      </image>
	  
      <image name="md_image">
         <visible>true</visible>
         <origin>1 1</origin>
         <pos>1 1</pos>
         <maxSize>0.3 0.3</maxSize>
      </image>
      <video name="md_video">
         <origin>1 1</origin>
         <pos>1 1</pos>
         <maxSize>0.9 0.9</maxSize>
         <showSnapshotDelay>false</showSnapshotDelay>
         <snapshotSource>image</snapshotSource>
         <delay>0.0</delay>
		 <zIndex>2</zIndex>		 
      </video>
   </view>

   <view name="grid">
      <imagegrid name="gamegrid">
         <pos>1 1</pos>
      </imagegrid>
   </view>

</theme>