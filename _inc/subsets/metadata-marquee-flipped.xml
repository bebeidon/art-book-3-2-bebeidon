<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

   <view name="detailed,video,grid">
   
      <image name="logo">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
	  
      <text name="logoText">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </text>
	  
      <text name="system-name" extra="true">
         <pos>0.15 0.03</pos>
         <size>0.7 0.03125</size>
         <text>${system.fullName}</text>
         <alignment>center</alignment>
         <fontSize>0.028125</fontSize>
         <fontPath>${bodyFont}</fontPath>
         <forceUppercase>true</forceUppercase>
		 <color>FFFFFF99</color>
      </text>
	  
      <image name="md_marquee">
         <visible>true</visible>
         <maxSize>0.38 0.28</maxSize>
         <pos>0.265 0.22</pos>
      </image>
	  
	  <textlist name="gamelist">
         <pos>0.5375 0.12</pos>
         <size>0.45 0.9</size>
      </textlist>
	  
      <text name="md_lbl_releasedate">
         <visible>true</visible>
         <pos>0.06 0.84</pos>
         <fontSize>0.035</fontSize>
         <color>ffffff99</color>
      </text>
	  
      <datetime name="md_releasedate">
         <visible>true</visible>
         <pos>0.21 0.84</pos>
         <size>0 0</size>
         <fontSize>0.035</fontSize>
         <color>ffffffcc</color>
      </datetime>
	  
      <text name="md_lbl_developer">
         <visible>true</visible>
         <pos>0.06 0.91</pos>
         <fontSize>0.035</fontSize>
		 <color>ffffff99</color>
      </text>
	  
      <text name="md_developer">
         <visible>true</visible>
         <pos>0.21 0.91</pos>
         <size>0.31 0.065</size>
         <fontPath>${bodyFont}</fontPath>
         <fontSize>0.035</fontSize>
         <color>ffffffcc</color>
      </text>
	  <image name="md_image">
         <pos>0.2625 0.58</pos>
      </image>
   </view>
   
   <view name="video,grid">
      <video name="md_video">
         <pos>0.2625 0.58</pos>
      </video>
   </view>

   <view name="grid">
      <imagegrid name="gamegrid">
         <pos>0.49 0.2</pos>
         <autoLayout>3 2</autoLayout>
		 <size>0.5 0.764</size>
         <centerSelection>false</centerSelection>
         <scrollDirection>vertical</scrollDirection>
      </imagegrid>
      <video name="md_video">
         <visible>true</visible>
         <snapshotSource>image</snapshotSource>
      </video>
      <text name="gridtile">
         <visible>false</visible>
      </text>
   </view>

</theme>