<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>7</formatVersion>

   <view name="grid">
      <image name="logo">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <text name="logoText">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </text>
	  <text name="system-name" extra="true">
         <pos>0.15 0.03</pos>
         <size>0.7 0.03125</size>
         <text>${system.fullName}</text>
         <alignment>center</alignment>
         <fontSize>0.028125</fontSize>
         <fontPath>${bodyFont}</fontPath>
         <forceUppercase>true</forceUppercase>
		 <color>FFFFFF99</color>
      </text>
      <imagegrid name="gamegrid">
         <pos>0 0.1</pos>
         <autoLayout>4 2</autoLayout>
		 <size>1 0.9</size>
         <centerSelection>false</centerSelection>
         <scrollDirection>vertical</scrollDirection>
      </imagegrid>
	  <gridtile name="default">
         <padding>5 5</padding>
         <backgroundCornerSize>0 0</backgroundCornerSize>
         <selectionMode>image</selectionMode>
         <backgroundColor>11111100</backgroundColor>
         <imageColor>ffffffff</imageColor>
      </gridtile>
      <gridtile name="selected">
         <backgroundColor>ffffffcc</backgroundColor>
         <imageColor>ffffffff</imageColor>
      </gridtile>	  
      <video name="md_video">
         <visible>false</visible>
      </video>
      <text name="gridtile">
         <visible>false</visible>
      </text>
   </view>

</theme>